{
    "name": "sundephish-backend",
    "description": "Backend powering the SundePhish suite",
    "version": "0.0.1",
    "author": {
        "name": "Peter Aleksander Bizjak",
        "email": "peteralex.developer@gmail.com"
    },
    "private": true,
    "license": "MIT",
    "scripts": {
        "upgrade": "npx npm-check-updates --upgrade",
        "format": "prettier --write --config=.prettierrc.yaml \"src/**/*.ts\" && eslint --fix \"src/**/*.ts\"",
        "build": "rm -rf dist && tsc --project tsconfig.json",
        "start": "node dist/main",
        "test": "jest"
    },
    "dependencies": {
        "@nestjs/common": "^9.1.1",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.1.1",
        "@nestjs/mapped-types": "^1.1.0",
        "@nestjs/mongoose": "^9.2.0",
        "@nestjs/platform-fastify": "^9.1.1",
        "mongoose": "^6.6.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.6",
        "scope-extensions-js": "^1.1.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.1.3",
        "@nestjs/schematics": "^9.0.3",
        "@nestjs/testing": "^9.1.1",
        "@types/jest": "^29.0.3",
        "@types/node": "^18.7.18",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.0.3",
        "mongodb-memory-server": "^8.9.2",
        "prettier": "^2.7.1",
        "ts-jest": "^29.0.1",
        "typescript": "^4.8.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": "[.]spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
